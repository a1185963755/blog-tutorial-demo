---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
const pageTitle = "Tag Index";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="flex flex-wrap my-0 mx-auto">
    {
      tags.map((tag) => (
        <p class="group hover:bg-[#000] cursor-pointer m-1 border-dotted border-[1px] border-[#a1a1a1] rounded-[0.5em] py-2 px-4 text-[1.15rem] bg-[#f8fcfd]">
          <a class="group-hover:text-[#fff] text-[#00539f]" href={`/tags/${tag}`}>
            {tag}
          </a>
        </p>
      ))
    }
  </div>
</BaseLayout>
